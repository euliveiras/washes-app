// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id           String         @id
  username     String
  password     String         @unique
  email        String         @unique
  sessionId    String?        @unique
  role         String
  createdAt    String
  Notification Notification[]
  Wash         Wash[] 
}

model Vehicle {
  licensePlate String      @id 
  driver       String?
  vehicleType  String
  Wash         Wash[]
  WashCycle    WashCycle[]
}

model Notification {
  id          String  @id
  user        User    @relation(fields: [recipientId], references: [id])
  recipientId String  @unique
  content     String
  readAt      String?
  createdAt   String

  @@index([recipientId])
}

model WashCycle {
  id              String  @id
  vehicleId       String  
  vehicle         Vehicle @relation(fields: [vehicleId], references: [licensePlate])
  startDate       String
  endDate         String
  washesId        String? 
  completedWashes String
  Wash            Wash[]

  @@index([vehicleId])
}

model Wash {
  id           String    @id
  vehicleId    String    
  vehicle      Vehicle   @relation(fields: [vehicleId], references: [licensePlate])
  scheduleDate String
  washCycle    WashCycle @relation(fields: [cycleId], references: [id])
  cycleId      String
  isCompleted  Boolean   @default(false)
  createdBy    String   
  user         User     @relation(fields: [createdBy], references: [id])
  note         String?

  @@index([vehicleId])
  @@index([cycleId])
  @@index([createdBy])
}
