// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id           String         @id
  username     String
  password     String         @unique
  email        String         @unique
  sessions     String
  role         String
  createdAt    String
  Notification Notification[]
}

model Vehicle {
  id           String      @id
  licensePlate String      @unique
  driver       Json
  vehicleType  String
  Wash         Wash[]
  WashCycle    WashCycle[]
}

model Notification {
  id          String @id
  user        User   @relation(fields: [recipientId], references: [id])
  recipientId String
  content     String
  readAt      String?
  createdAt   String

  @@index([recipientId])
}

model WashCycle {
  id              String  @id
  vehicleId       String
  vehicle         Vehicle @relation(fields: [vehicleId], references: [id])
  startDate       String
  endDate         String
  washesId        Json
  completedWashes Json
  Wash            Wash[]

  @@index([vehicleId])
}

model Wash {
  id           String    @id
  vehicleId    String
  vehicle      Vehicle   @relation(fields: [vehicleId], references: [id])
  scheduleDate String
  washCycle    WashCycle @relation(fields: [cycleId], references: [id])
  cycleId      String

  @@index([vehicleId])
  @@index([cycleId])
}
